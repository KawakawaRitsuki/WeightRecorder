
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:id="@+id/rootLo">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_mini"
                    android:id="@+id/imgitem1"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignTop="@+id/imgitem1"
                    android:layout_toLeftOf="@+id/imgitem1"
                    android:layout_toStartOf="@+id/imgitem1"
                    android:layout_alignBottom="@+id/imgitem1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Item1"
                        android:id="@+id/item1Tv"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignBottom="@+id/imgitem1"
                        android:layout_toLeftOf="@+id/imgitem1"
                        android:layout_toStartOf="@+id/imgitem1"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:textColor="#ffffffff" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:orientation="horizontal"
            android:focusableInTouchMode="false">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_all"
                    android:id="@+id/imgitem2"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignTop="@+id/imgitem2"
                    android:layout_toLeftOf="@+id/imgitem2"
                    android:layout_toStartOf="@+id/imgitem2"
                    android:layout_alignBottom="@+id/imgitem2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Item2"
                        android:id="@+id/item2Tv"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_alignBottom="@+id/imgitem2"
                        android:layout_toLeftOf="@+id/imgitem2"
                        android:layout_toStartOf="@+id/imgitem2"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:textColor="#ffffffff" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_mini"
                    android:id="@+id/imgitem3"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="20dp"
                    android:layout_alignParentBottom="true"
