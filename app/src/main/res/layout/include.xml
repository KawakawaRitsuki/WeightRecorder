                android:layout_alignParentRight="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignTop="@+id/imgitem6"
                android:layout_toLeftOf="@+id/imgitem6"
                android:layout_toStartOf="@+id/imgitem6"
                android:layout_alignBottom="@+id/imgitem6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="記録"
                    android:id="@+id/item6Tv"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_alignBottom="@+id/imgitem6"
                    android:layout_toLeftOf="@+id/imgitem6"
                    android:layout_toStartOf="@+id/imgitem6"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:textColor="#ffffffff"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

        <ImageView
        android:id="@+id/plus_ic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:alpha="0.9"
        android:onClick="plus_ic"
        android:src="@drawable/ic_plus"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp" />
    </FrameLayout>


</LinearLayout>